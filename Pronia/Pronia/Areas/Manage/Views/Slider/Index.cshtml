@model List<Slider>
@{
    int counter = 0;
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Sliders:</h1>
        <a asp-controller="slider" asp-action="create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title1</th>
                <th scope="col">Title2</th>
                <th scope="col">Desc</th>
                <th scope="col">Image</th>
                <th scope="col"> Action</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var slider in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slider.Title1</td>
                    <td>@slider.Title2</td>
                    <td>@slider.Desc</td>
                    <td><img width="100" src="~/uploads/sliders/@slider.ImageUrl" /></td>
                    <td>
                        <a asp-controller="slider" asp-action="update" asp-route-id="@slider.Id" class="btn btn-warning">Update</a>
                        <a asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>